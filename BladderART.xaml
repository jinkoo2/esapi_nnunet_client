<Window x:Class="nnunet_client.BladderART"
        xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
        xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
        xmlns:views="clr-namespace:nnunet_client.views"
        xmlns:esapiui="clr-namespace:esapi.UI;assembly=esapi"
        Title="Bladder ART" Height="640" Width="960"
        FontFamily="Arial" FontSize="12"
        WindowState="Maximized"
        Closed="Window_Closed" >

    <Window.Resources>

        <Style TargetType="{x:Type TextBox}">
            <Setter Property="Background" Value="LightGray" />
            <Setter Property="Padding" Value="5" />
            <Setter Property="Margin" Value="5" />
            <Setter Property="MinWidth" Value="100" />
        </Style>
        
        <Style TargetType="{x:Type Label}">
            <Setter Property="Background" Value="LightGray" />
            <Setter Property="Padding" Value="5" />
            <Setter Property="Margin" Value="5" />
            <Setter Property="MinWidth" Value="100" />
        </Style>

        <Style TargetType="{x:Type Button}">
            <Setter Property="Background" Value="LightGray" />
            <Setter Property="Padding" Value="5" />
            <Setter Property="Margin" Value="5" />
            <Setter Property="MinWidth" Value="100" />
        </Style>

        <Style TargetType="{x:Type TabItem}">
            <Setter Property="Padding" Value="5" />
        </Style>
        

    </Window.Resources>
    <Grid Margin="10">
        <Grid.RowDefinitions>
            <RowDefinition Height="Auto" />
            <RowDefinition Height="*" />
            <RowDefinition Height="100" />
            
        </Grid.RowDefinitions>

        <TextBlock Text="Bladder ART"
                    Grid.Row="0"
                   FontSize="24"
                   HorizontalAlignment="Center"
                   Margin="0 10"
                   />

        <TabControl Grid.Row="1">
            <TabItem Header="Patient">
                <StackPanel Margin="10" Orientation="Vertical">
                    <esapiui:AutoCompleteTextBox x:Name="PatientSearchBox"
                                 Margin="0,0,0,10"
                                 HorizontalAlignment="Stretch"/>

                    
                    <esapiui:PatientPropertyGridControl x:Name="PatientControl"
                           HorizontalAlignment="Stretch"/>
                   
                    
                </StackPanel>
            </TabItem>

            <!-- Image List -->
            <TabItem Header="Images">
                <Grid>
                    <esapiui:ImageListUserControl x:Name="ImageListControl"
                                     HorizontalAlignment="Stretch"
                                     VerticalAlignment="Stretch" />
                </Grid>
            </TabItem>

            <!-- Auto Contour -->
            <TabItem Header="AutoContour">
                <views:AutoContourControl x:Name="AutoSegControl"/>
            </TabItem>

            <!-- Auto Plan -->
            <TabItem Header="AutoPlan">
                <views:BladderAutoPlanControl x:Name="AutoPlanControl"
                        HorizontalAlignment="Stretch"
                        VerticalAlignment="Stretch"
                        Margin="10"/>
            </TabItem>
            
            <!-- Dose Limit Checker -->
            <TabItem Header="Dose Limit Check">
                <views:DoseLimitListEditorControl x:Name="DoseLimitEditorControl"
                        HorizontalAlignment="Stretch"
                        VerticalAlignment="Stretch"
                        Margin="10"/>
            </TabItem>


        </TabControl>

        <views:LogFileViewControl x:Name="Logger" Grid.Row="2"/>

    </Grid>
</Window>
