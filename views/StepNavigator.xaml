<UserControl x:Class="nnunet_client.views.StepNavigator"
             xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
             xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
             xmlns:vm="clr-namespace:nnunet_client.viewmodels">
    <UserControl.DataContext>
        <vm:StepNavigatorViewModel />
    </UserControl.DataContext>

    <Grid Margin="20">
        <Grid.RowDefinitions>
            <RowDefinition Height="Auto"/>
            <RowDefinition Height="*"/>
            <RowDefinition Height="Auto"/>
        </Grid.RowDefinitions>

        <!-- Step Title -->
        <TextBlock Text="{Binding CurrentPage.Title}" 
                   FontSize="20" FontWeight="Bold" 
                   HorizontalAlignment="Center"
                   Margin="0,0,0,10"/>

        <!-- Step Content -->
        <ContentControl Grid.Row="1"
                        Content="{Binding CurrentPage.Content}"
                        HorizontalAlignment="Stretch"
                        VerticalAlignment="Stretch"/>

        <!-- Navigation Buttons -->
        <StackPanel Grid.Row="2" Orientation="Horizontal" HorizontalAlignment="Center" Margin="0,10,0,0">
            <Button Content="Previous" 
                    Command="{Binding PreviousCommand}" 
                    IsEnabled="{Binding CanGoPrevious}" 
                    Margin="5"/>
            <Button Content="Next" 
                    Command="{Binding NextCommand}" 
                    IsEnabled="{Binding CanGoNext}" 
                    Margin="5"/>
        </StackPanel>
    </Grid>
</UserControl>
