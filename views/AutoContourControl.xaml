<UserControl x:Class="nnunet_client.views.AutoContourControl"
             xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
             xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
             xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006"
             xmlns:d="http://schemas.microsoft.com/expression/blend/2008"
             xmlns:local="clr-namespace:nnunet_client.views"
             xmlns:wf="clr-namespace:System.Windows.Forms;assembly=System.Windows.Forms"
             xmlns:wfi="clr-namespace:System.Windows.Forms.Integration;assembly=WindowsFormsIntegration"
             xmlns:esapiu="clr-namespace:esapi.UI;assembly=esapi"
             mc:Ignorable="d"
             d:DesignHeight="450" d:DesignWidth="800" MinHeight="100" MinWidth="100">

   
    <Grid>
        <Grid.RowDefinitions>
            <RowDefinition Height="Auto"/>
            <RowDefinition Height="Auto"/>
            <RowDefinition Height="*"/>
            <RowDefinition Height="Auto"/>
            <RowDefinition Height="Auto"/>
        </Grid.RowDefinitions>

        <!-- Label for Selected Image Id -->
        <GroupBox Header="Image" Grid.Row="0">
            <Label Content = "{Binding Image.Id}"  Width="200" HorizontalAlignment="Left"/>
        </GroupBox>

        <!-- ComboBox for templates -->
        <GroupBox Header="Contour Template" Grid.Row="1">
            <ComboBox 
                ItemsSource="{Binding Templates}"
                DisplayMemberPath="Name"
                SelectedItem="{Binding SelectedTemplate}"
              HorizontalAlignment="Left"
              Width="300"
              Margin="0 0 0 5"
              />
        </GroupBox>
        <!-- Segmentation template editor -->
        <local:SegmentationTemplateEditor 
            Grid.Row="2"
            DataContext="{Binding SegmentationTemplateEditorViewModel}"
            />
        
        <!--
        <Border Grid.Row="1" BorderBrush="Black" BorderThickness="2" Margin="5">
            <wfi:WindowsFormsHost HorizontalAlignment="Stretch" VerticalAlignment="Stretch">
                <esapiu:ImageOneViewUserControl x:Name="ImageOneView" />
            </wfi:WindowsFormsHost>
        </Border>
        -->
    
        <!-- buttons-->
        <StackPanel Orientation="Horizontal" Grid.Row="3" Margin="10" HorizontalAlignment="Center">
            <Button x:Name="SubmitButton" 
                    Command="{Binding SubmitCommand}" 
                    IsEnabled="{Binding ProcessIdle}"
                    MinWidth="100" Margin="10,5" Padding="5">Submit</Button>
            <Button x:Name="CheckStatusButton" 
                    Command="{Binding CheckStatusCommand}"
                    IsEnabled="{Binding ProcessIdle}"
                    MinWidth="100" Margin="10,5" Padding="5">Check Status</Button>
            <Button x:Name="ImportContoursButton" 
                    Command="{Binding ImportContoursCommand}"
                    IsEnabled="{Binding ProcessIdle}"
                    MinWidth="100" Margin="10,5" Padding="5">Import Contours</Button>
        </StackPanel>
        <TextBlock Text="{Binding ErrorMessage}" Foreground="Red" Grid.Row="4" Background="Transparent"/>
    </Grid>
</UserControl>
