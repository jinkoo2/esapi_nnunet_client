<UserControl x:Class="nnunet_client.views.PrescriptionListComboBoxControl"
             xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
             xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
             xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006" 
             xmlns:d="http://schemas.microsoft.com/expression/blend/2008" 
             xmlns:local="clr-namespace:nnunet_client.views"
             mc:Ignorable="d" 
             d:DesignHeight="50" d:DesignWidth="300">

    <Grid>
        <Grid.ColumnDefinitions>
            <ColumnDefinition Width="Auto" />
            <ColumnDefinition Width="*" />
        </Grid.ColumnDefinitions>

        <!-- Label for the ComboBox -->
        <Label Grid.Column="0"
               Content="Select Prescription:"
               VerticalAlignment="Center"
               Margin="0,0,10,0" />

        <!-- ComboBox to display the prescriptions -->
        <ComboBox Grid.Column="1"
                  Width="150"
                  HorizontalAlignment="Left"
                  VerticalAlignment="Center"
                  ItemsSource="{Binding Prescriptions}"
                  SelectedItem="{Binding SelectedPrescription}"
                  DisplayMemberPath="Id" />
    </Grid>
</UserControl>
