<UserControl x:Class="nnunet_client.views.DoseLimitCheckerControl"
             xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
             xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
             xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006"    
             xmlns:d="http://schemas.microsoft.com/expression/blend/2008"    
             xmlns:esapiui ="clr-namespace:esapi.UI;assembly=esapi"    
             xmlns:local="clr-namespace:nnunet_client.views"
             
             mc:Ignorable="d"    
             d:DesignHeight="600" d:DesignWidth="850">

    <UserControl.Resources>
        <!-- Standard Button Style for uniformity -->
        <Style TargetType="{x:Type Button}">
            <Setter Property="Margin" Value="4"/>
            <Setter Property="Padding" Value="8 4"/>
            <Setter Property="Background" Value="#E0E0E0"/>
            <Setter Property="BorderBrush" Value="#A0A0A0"/>
            <Setter Property="BorderThickness" Value="1"/>
            <Setter Property="HorizontalContentAlignment" Value="Center"/>
            <!-- FIX: Removed CornerRadius, as it requires template customization on a base Button -->
        </Style>

        <!-- GroupBox Style for a cleaner look -->
        <Style TargetType="{x:Type GroupBox}">
            <Setter Property="Padding" Value="10"/>
            <Setter Property="Margin" Value="0 8 0 8"/>
            <Setter Property="BorderBrush" Value="#D0D0D0"/>
            <Setter Property="Background" Value="White"/>
            <Setter Property="Template">
                <Setter.Value>
                    <ControlTemplate TargetType="{x:Type GroupBox}">
                        <!-- CornerRadius is applied correctly to the Border here -->
                        <Border BorderBrush="{TemplateBinding BorderBrush}" 
                                BorderThickness="{TemplateBinding BorderThickness}" 
                                Background="{TemplateBinding Background}" 
                                CornerRadius="4">
                            <Grid>
                                <Grid.RowDefinitions>
                                    <RowDefinition Height="Auto"/>
                                    <RowDefinition Height="*"/>
                                </Grid.RowDefinitions>
                                <!-- The ContentPresenter displays the Header content -->
                                <ContentPresenter Content="{TemplateBinding Header}" 
                                                  Margin="10 4 10 0" 
                                                  Grid.Row="0"/>
                                <ContentPresenter Grid.Row="1" Margin="{TemplateBinding Padding}"/>
                            </Grid>
                        </Border>
                    </ControlTemplate>
                </Setter.Value>
            </Setter>
        </Style>
    </UserControl.Resources>

    <Grid>
        <Grid.ColumnDefinitions>
            <ColumnDefinition Width="280"/>
            <!-- Left sidebar -->
            <ColumnDefinition Width="*"/>
            <!-- Right editor section -->
        </Grid.ColumnDefinitions>

        <!-- LEFT SECTION: Controls Sidebar -->
        <ScrollViewer Grid.Column="0" VerticalScrollBarVisibility="Auto" Background="#F5F5F5">
            <StackPanel Margin="16">

                <!-- CONTEXT SELECTION SECTION HEADER -->
                <TextBlock Text="PLAN CONTEXT" FontWeight="Bold" FontSize="14" Margin="0 0 0 10" Foreground="#444444"/>

                <!-- Patient Section -->
                <GroupBox Header="Patient ID" Margin="0 0 0 10">
                    <esapiui:AutoCompleteTextBox
                        ItemsSource="{Binding PatientNameIdList}" 
                        SelectedItem="{Binding SelectedPatientNameId}"
                        Height="28"
                        />
                </GroupBox>

                <!-- Course Section -->
                <GroupBox Header="Course" Margin="0 0 0 10">
                    <ComboBox
                        ItemsSource="{Binding CourseIdList}"
                        SelectedItem="{Binding SelectedCourseId}"
                        Height="28"
                        />
                </GroupBox>

                <!-- Plan Section -->
                <GroupBox Header="Plan" Margin="0 0 0 16">
                    <ComboBox
                        ItemsSource="{Binding PlanIdList}"
                        SelectedItem="{Binding SelectedPlanId}"
                        Height="28"
                        />
                </GroupBox>

                <Separator Margin="0 0 0 16"/>

                <!-- TEMPLATE MANAGEMENT SECTION HEADER -->
                <TextBlock Text="DOSE TEMPLATE" FontWeight="Bold" FontSize="14" Margin="0 0 0 10" Foreground="#444444"/>

                <!-- Select Dose Limit Template -->
                <GroupBox Header="Templates" Padding="10">
                    <StackPanel Orientation="Vertical">

                        <ListView
                            ItemsSource="{Binding DoseLimitListEditorViewModelList}"
                            SelectedItem="{Binding SelectedDoseLimitListEditorViewModel}"
                            DisplayMemberPath="Title"
                            Margin="0 0 0 10"
                            MaxHeight="180"
                            BorderBrush="#D0D0D0"
                            BorderThickness="1"
                            />

                        <Grid>
                            <Grid.ColumnDefinitions>
                                <ColumnDefinition Width="*"/>
                                <ColumnDefinition Width="*"/>
                                <ColumnDefinition Width="*"/>
                            </Grid.ColumnDefinitions>

                            <!-- Buttons are laid out using a Grid -->
                            <Button Grid.Column="0" Content="New" Command="{Binding NewDoseLimitSetCommand}"/>
                            <Button Grid.Column="1" Content="Import..." Command="{Binding ImportTemplateCommand}"/>
                            <Button Grid.Column="2" Content="Save List" Command="{Binding SaveDoseLimitListEditorViewModelListCommand}"/>
                        </Grid>
                    </StackPanel>
                </GroupBox>

                <Separator Margin="0 16 0 16"/>

                <!-- COMMANDS SECTION HEADER -->
                <TextBlock Text="ACTIONS" FontWeight="Bold" FontSize="14" Margin="0 0 0 10" Foreground="#444444"/>

                <!-- Command Button -->
                <GroupBox Header="Evaluation" Padding="10">
                    <Button 
                        Command="{Binding EvaluateDoseLimitesCommand}"    
                        Content="Evaluate Dose Limits"
                        Background="#2B7DEE"
                        Foreground="White"
                        FontSize="14"
                        FontWeight="Bold"
                        Padding="16 8"
                        HorizontalAlignment="Stretch"
                        />
                </GroupBox>
            </StackPanel>
        </ScrollViewer>

        <!-- RIGHT SECTION: Template Editor -->
        <!-- CornerRadius is correctly applied to this Border element -->
        <Border Grid.Column="1" Margin="16" 
                Background="White" 
                BorderBrush="#D0D0D0" 
                BorderThickness="1" 
                CornerRadius="6">
            <local:DoseLimitListEditorControl    
                DataContext="{Binding SelectedDoseLimitListEditorViewModel}"
                Margin="15"/>
        </Border>

    </Grid>
</UserControl>
