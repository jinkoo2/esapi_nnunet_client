<UserControl x:Class="nnunet_client.views.GenericListControl"
             xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
             xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml">

    <DockPanel Margin="10">
        <!-- Toolbar -->
        <StackPanel DockPanel.Dock="Top" Orientation="Horizontal" Margin="0 0 0 10">
            <Button Content="Add" Command="{Binding AddCommand}" Margin="2"/>
            <Button Content="Remove" Command="{Binding RemoveCommand}" Margin="2"/>
            <Button Content="Duplicate" Command="{Binding DuplicateCommand}" Margin="2"/>
            <Button Content="Export" Command="{Binding ExportCommand}" Margin="2"/>
            <Button Content="Import" Command="{Binding ImportCommand}" Margin="2"/>
        </StackPanel>

        <!-- Generic List -->
        <ListView ItemsSource="{Binding Items}" SelectedItem="{Binding SelectedItem}">
            <ListView.View>
                <GridView>
                    <!-- Auto-generate columns for simple types -->
                    <GridViewColumn Header="Object" Width="250" DisplayMemberBinding="{Binding}" />
                </GridView>
            </ListView.View>
        </ListView>
    </DockPanel>
</UserControl>
